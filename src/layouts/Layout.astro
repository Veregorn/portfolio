---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import "@fontsource-variable/onest"

interface Props {
	title: string;
	description: string;
}

const { title } = Astro.props;
const { description } = Astro.props;
---

<!doctype html>
<html lang="es">

	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={ description } />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body>
		<div class="absolute inset-0 top-0 right-0 bottom-0 left-0 z-[-2] bg-black">
			<div class="absolute bottom-0 left-0 right-0 top-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:24px_24px]"></div>
			<div class="absolute left-10 right-0 top-[-5%] h-[1000px] rounded-full bg-[radial-gradient(circle_450px_at_50%_350px,#fbfbfb36,#000)]"></div>
		</div>
		<Header />
		<slot />
		<Footer />
	</body>

</html>
<style is:global>
	:root {
		color-scheme: light dark;
	}

	html {
		font-family: "Onest Variable", system-ui, sans-serif;
		scroll-behavior: smooth;
	}

	body {
		position: relative;
		color: #fff;
		height: 100%;
	}

	@media (prefers-reduced-motion: reduce) {
		html {
			scroll-behavior: auto;
		}
	}
</style>
