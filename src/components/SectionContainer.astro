---
import Briefcase from '../icons/Briefcase.astro';
import Code from '../icons/Code.astro';

const { class: className, id, title } = Astro.props
---
<section id={id} class={`w-full lg:w-[740px] mx-auto ${className}`}>
    <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        {
            id === 'experiencia' && <Briefcase class="size-7" />
        }

        {
            id === 'proyectos' && <Code class="size-7" />
        }

        { title }
    </h2>
    <slot />
</section>